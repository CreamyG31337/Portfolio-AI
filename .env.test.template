# =====================================================
# TEST ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and use for local testing
# This configuration points to Docker test databases on ports 5433/5434
# =====================================================

# =====================================================
# TEST DATABASE CONNECTIONS
# =====================================================
# Supabase Test Database (Docker PostgreSQL on port 5433)
DATABASE_URL=postgresql://test_user:test_password@localhost:5433/portfolio_supabase_test
SUPABASE_DATABASE_URL=postgresql://test_user:test_password@localhost:5433/portfolio_supabase_test

# Research Test Database (Docker PostgreSQL on port 5434)
RESEARCH_DATABASE_URL=postgresql://test_user:test_password@localhost:5434/portfolio_research_test

# =====================================================
# SUPABASE CONFIGURATION (Mock - Required for Client Init)
# =====================================================
# For Supabase client initialization (mock values - not actually used in test mode)
SUPABASE_URL=http://localhost:5433
SUPABASE_PUBLISHABLE_KEY=test_key_disabled
SUPABASE_ANON_KEY=test_key_disabled
SUPABASE_SECRET_KEY=test_key_disabled
SUPABASE_SERVICE_ROLE_KEY=test_key_disabled

# =====================================================
# APPLICATION CONFIGURATION
# =====================================================
APP_DOMAIN=localhost:5001
FLASK_SECRET_KEY=test-secret-key-change-in-production
FLASK_PORT=5001
JWT_SECRET=test-jwt-secret-change-in-production

# =====================================================
# TEST MODE FLAGS
# =====================================================
TEST_MODE=true
ENVIRONMENT=test

# =====================================================
# DISABLE EXTERNAL APIS (Test Environment)
# =====================================================
WEBULL_API_KEY=test_key_disabled
OPENAI_API_KEY=test_key_disabled
FMP_API_KEY=test_key_disabled
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_ENABLED=false
OLLAMA_MODEL=mistral-nemo:12b
FLARESOLVERR_URL=http://localhost:8191

# =====================================================
# TEST FUNDS
# =====================================================
DEFAULT_TEST_FUND=TEST

# =====================================================
# OTHER CONFIGURATION
# =====================================================
TZ=America/Vancouver
LOG_LEVEL=DEBUG
