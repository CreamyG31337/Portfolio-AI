{
  "name": "llm-micro-cap-trading-bot",
  "version": "1.0.0",
  "description": "Trading bot web dashboard with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i web_dashboard/static/css/input.css -o web_dashboard/static/css/tailwind.css --minify",
    "watch:css": "tailwindcss -i web_dashboard/static/css/input.css -o web_dashboard/static/css/tailwind.css --watch",
    "build:ts": "tsc -p web_dashboard/tsconfig.json --pretty --listFiles --diagnostics",
    "build": "npm run build:css && npm run build:ts",
    "test:ts": "tsc -p web_dashboard/tsconfig.json --noEmit"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
